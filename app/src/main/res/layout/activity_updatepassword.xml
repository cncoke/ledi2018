<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_activity_background"
              android:orientation="vertical">

    <cn.yc.ledi.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hyphenate:titleBarTitle="修改密码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/common_white"
        android:orientation="vertical">

        <View
            style="@style/common_view_divider"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                style="@style/center_list_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/center_list_style"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/common_black"
                    android:layout_height="wrap_content"
                    android:text="+86"/>

                <TextView
                    style="@style/center_list_style"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/common_black"
                    android:id="@+id/tv_userphone"
                    android:layout_height="wrap_content"
                    android:text="18645100737"/>

            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/common_view_divider"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/center_list_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新  密  码"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_password1"
                    style="@style/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入新登录密码"

                    android:inputType="textPassword"
                    android:maxLength="11">

                </EditText>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/common_view_divider"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/center_list_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_password2"
                    style="@style/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="再次输入新登录密码"

                    android:inputType="textPassword"
                    android:maxLength="11">

                </EditText>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/common_view_divider"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <TextView
        style="@style/public_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onLogin"
        android:text="修 改"/>
</LinearLayout>