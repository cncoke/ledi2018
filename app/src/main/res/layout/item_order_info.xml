<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/common_activity_background"
              android:orientation="vertical"
              android:paddingTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乘客"
                    android:textColor="@color/common_content"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王先生"
                    android:textColor="@color/common_content"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="16dp"
                    android:layout_height="17dp"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:src="@mipmap/phone_button_normal"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_inputtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/common_content"
                android:textSize="@dimen/font_size12"
                android:layout_marginRight="8dp"
                android:text=""/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:id="@+id/ll_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ll_orderstate"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/mapico_q_s"/>

                    <TextView
                        android:id="@+id/tv_sta_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="25"

                        android:text="宣西小区"
                        android:textColor="@color/common_content"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/mapico_z_s"/>

                    <TextView
                        android:id="@+id/tv_end_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:maxLength="25"
                        android:text="龙塔"
                        android:textColor="@color/common_content"
                        android:textSize="14dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_orderstate"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_public_button_background"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="拨打电话"
                    android:textColor="@color/common_white"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/common_content"
                    android:textSize="12dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>